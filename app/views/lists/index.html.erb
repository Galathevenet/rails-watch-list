<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://cdn.radiofrance.fr/s3/cruiser-production/2020/12/5b5a3d8d-9654-4ebb-9a99-5f8e6169c6c6/838_gettyimages-108387402.jpg);">
  <div class="container">
    <h1>All your <strong>movie lists</strong> in <strong>one place</strong></h1>
    <p>Never forget about a movie again</p>
  </div>
</div>



<% @lists.each do |list| %>
  <% if list.photo.attached? %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
      <%= link_to list.name, list_path(list) %>
    </div>
  <% else %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_tag("uboputwtc7ol1yb5qfh0", width: 400, height: 300, crop: :fill) %>')">
      <%= link_to list.name, list_path(list) %>
    </div>
  <% end %>
<% end %>
