<div class="page-container">
<div class="title-and-button-background" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path("uboputwtc7ol1yb5qfh0", width: 400, height: 300, crop: :fill) %>')">
  <h1><%= @list.name %></h1> <p>
  <div class="add-button">
    <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-secondary text-center" %></p>
  </div>
</div>

  <% @list.bookmarks.each do |bookmark| %>
  <div class="card-product">
    <img src="<%= bookmark.movie.poster_url %>" />
    <div class="card-product-infos">
      <h2><%= bookmark.movie.title %></h2> <%= bookmark.movie.rating%>
      <p><%= bookmark.movie.overview %></p>
      <p><strong><%= bookmark.comment %></strong></p>
    </div>
  </div>
  <% end %>
</div>
